<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_line"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <ToggleButton
        android:id="@+id/btn_play_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:checked="false"
        android:contentDescription="@string/play_pause_button" />

    <TextView
        android:id="@+id/tv_song_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_play_stop"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn_play_stop"
        android:layout_toRightOf="@+id/btn_play_stop"
        android:width="200dp"
        android:gravity="center"
        android:maxWidth="200dp"
        android:text="@string/song_info"
        android:textColor="@android:color/background_light"
        android:textSize="12sp" />

    <SeekBar
        android:id="@+id/sb_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/btn_play_stop"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="45dp"
        android:layout_toLeftOf="@+id/btn_play_stop" />

</RelativeLayout>
